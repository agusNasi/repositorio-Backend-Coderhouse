<div>
  <div class='welcome-box z-depth-2'>
    <div class='info-section'>
      <h3 class='welcome-title'>Bienvenido
        {{user.firstName}}
        {{user.lastName}}
        <span class='user-role'>({{user.role}})</span></h3>
      <p class='user-email'>{{user.email}}</p>
      {{#if user.age}}
        <p class='user-age'>{{user.age}} a√±os</p>
      {{/if}}
      {{#if user.githubLogin}}
        <p class='github-user-tag'>(Registrado con GitHub)</p>
      {{/if}}
    </div>
    {{#if user.profilePic}}
      <div class='pic-section'>
        <div class='profile-pic-container'>
          <img
            src='../../statics/img/{{user.profilePic.originalName}}'
            alt=''
          />
        </div>
      </div>
    {{/if}}
  </div>
  <h1 class='main-title'>Nuestros Productos</h1>
  <button
    class='see-cart-button waves-effect waves-light btn-large indigo'
    onclick='seeCart(event)'
    id={{user.cart}}
  >Ver carrito</button>
  <div id='product-list-container'>
    {{#each products}}
      <div class='product-item' id={{id}}>
        <p id='item-title'>{{title}}</p>
        <p>{{description}}</p>
        <p class='price-tag'>${{price}}</p>
        {{#if thumbnails}}
          <div class='thumbnail-container'>
            <img src='../../statics/img/{{thumbnails.0.originalName}}' alt='' />
          </div>
        {{else}}
          <p id='no-image'>Imagen no disponible</p>
        {{/if}}
        {{#if stock}}
          <p class='stock-tag'>{{stock}} en stock</p>
        {{/if}}
        <div class='button-section-container'>
          <div class='item-counter-container'>
            <button
              class='less-button-counter'
              onclick='decreaseAmount(event)'
            >-</button>
            <p class='counter'>1</p>
            <button
              class='more-button-counter'
              onclick='increaseAmount(event)'
            >+</button>
          </div>
          {{#if status}}
            <button
              id='add-to-cart-button'
              class='waves-effect waves-light btn-small'
              onclick='addToCart(event)'
            >Agregar al carrito</button>
          {{else}}
            <button
              id='add-to-cart-button'
              class='waves-effect waves-light btn-small'
              onclick='addToCart(event)'
              disabled
            >Agotado</button>
          {{/if}}
        </div>
      </div>
    {{/each}}
  </div>
</div>

<script src='//cdn.jsdelivr.net/npm/sweetalert2@11'></script>
<script src='/statics/js/index.js'></script>