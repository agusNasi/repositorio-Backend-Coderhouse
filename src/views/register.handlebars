<h1 class="signup-title">Registrarse</h1>
<div class="row register-form-container container">
    <form class="col s12 register-form" action="/api/session/register" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="input-field col s6">
                <input type="text" class="validate" name="firstName">
                <label for="first_name">Nombre</label>
            </div>
            <div class="input-field col s6">
                <input type="text" class="validate" name="lastName">
                <label for="last_name">Apellido</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input type="email" class="validate" name="email">
                <label for="disabled">Email</label>
                <span class="helper-text" data-error="Introduce a valid email" data-success="right"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input type="number" class="validate" name="age" min="1" max="100">
                <label for="email">Edad</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input type="password" class="validate" name="password">
                <label for="password">contrase√±a</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <p>Foto de perfil (opcional)</p>
                <input type="file" class="validate" name="file">
            </div>
        </div>
        <input class="waves-effect waves-light btn-small register-submit" type="submit" value="Registrar">
    </form>
</div>
<a href="/login" class="login-anchor">Ya tienes cuenta? Inicia sesion aqui!</a>

<script src="/statics/js/register.js"></script>