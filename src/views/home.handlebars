<div>
    <h1>Productos</h1>
    <div id="product-list-container">
        {{#each products}}
            <div id="product-item">
                <p id="title">{{title}}</p>
                <p>{{description}}</p>
                <p>${{price}}</p>
                {{#if havePics}}
                    <div class="thumbnail-container">
                        <img src="../../statics/img/{{thumbnails.0.originalName}}" alt="">
                    </div>
                {{else}}
                    <p id="no-image">no image</p>
                {{/if}}
            </div>
        {{/each}}
    </div>
    <form action="/api/products" class="add-product-form" method="post" enctype="multipart/form-data">
        <h2>Agregar Producto</h2>
        <input type="text" placeholder="Titulo" name="title">
        <input type="text" placeholder="Descripcion" name="description">
        <input type="text" placeholder="Codigo" name="code">
        <input type="number" placeholder="Precio" name="price">
        <input type="number" placeholder="Stock" name="stock">
        <input type="text" placeholder="Categoria" name="category">
        <input type="file" name="files" multiple>
        <label for="input-status"><input type="checkbox" name="status" id="input-status">Disponible</label>
        <input type="submit" value="Send">
    </form>
</div>